generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"

}

enum Role {
  USER
  ADMIN
}

enum OtpType {
  REGISTER
  LOGIN
  RESET_PASSWORD
}

/* =========================
   AUTH (Better Auth style)
   Optional: add partial unique index for email reuse after soft delete:
   CREATE UNIQUE INDEX users_email_active ON users (email) WHERE deleted_at IS NULL;
   ========================= */

model user {
  id            String    @id @default(uuid()) @db.Uuid
  name          String    @db.VarChar(255)
  email         String    @unique @db.VarChar(255)
  emailVerified Boolean   @default(false) @map("email_verified")
  image         String?   @db.VarChar(512)
  role          Role      @default(USER)
  deletedAt     DateTime? @map("deleted_at") @db.Timestamptz(6)
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  account     account[]
  session     session[]
  verification verification[]

  @@index([email, emailVerified])
  @@index([email, deletedAt])
  @@index([role])
  @@index([deletedAt])
  @@map("users")
}

model account {
  id                    String    @id @default(uuid()) @db.Uuid
  accountId             String    @map("account_id") @db.VarChar(255)
  providerId            String    @map("provider_id") @db.VarChar(64)
  userId                String    @map("user_id") @db.Uuid
  accessToken           String?   @map("access_token") @db.Text
  refreshToken          String?   @map("refresh_token") @db.Text
  idToken               String?   @map("id_token") @db.Text
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at") @db.Timestamptz(6)
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at") @db.Timestamptz(6)
  scope                 String?   @db.VarChar(255)
  password              String?   @db.VarChar(255)
  createdAt             DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt             DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  user user @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model session {
  id        String    @id @default(uuid()) @db.Uuid
  token     String    @unique @db.Text
  expiresAt DateTime  @map("expires_at") @db.Timestamptz(6)
  ipAddress String?   @map("ip_address") @db.VarChar(45)
  userAgent String?   @map("user_agent") @db.VarChar(512)
  userId    String    @map("user_id") @db.Uuid
  user      user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model verification {
  id           String   @id @default(uuid()) @db.Uuid
  identifier   String   @db.VarChar(255)
  value        String   @db.VarChar(255)
  type         OtpType
  expiresAt    DateTime @map("expires_at") @db.Timestamptz(6)
  attemptCount Int      @default(0) @map("attempt_count")
  isUsed       Boolean  @default(false) @map("is_used")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  userId String? @map("user_id") @db.Uuid
  user   user?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([identifier])
  @@index([identifier, type])
  @@index([identifier, type, isUsed])
  @@index([expiresAt])
  @@map("verifications")
}
